{
  "name": "spa-base",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "lint:js": "eslint './client/scripts/**/*.js'",
    "lint:css": "stylint ./client/stylus",
    "lint:html": " pug-lint ./client/templates/**/*.pug",
    "lint": "run-s lint:js lint:css lint:html",
    "format:js": "eslint './client/scripts/**/*.js' --fix",
    "format:css": "stylus-supremacy format glob './client/stylus/**/*.styl' --replace --options ./.stylintrc",
    "format": "run-s format:js format:css",
    "precommit": "lint-staged",
    "del": "rimraf ./public",
    "mkdir": "mkdirp ./public/assets/styles/",
    "open": "opn http://localhost:3000",
    "server": "nodemon ./server/index.js --watch ./server",
    "server:db": "json-server ./server/db/index.json --routes ./server/db/routes.json --middlewares ./server/middlewares/logger.js ./server/middlewares/renderPugAsHtml.js",
    "watch": "run-p copy mkdir server build:*:dev open",
    "copy": "cpx './client/**/{*.jpg,*.png,*.gif,*.mp4,*.mov,*.json,*.eot,*.svg,*.ttf,*.woff}' './public' --watch",
    "build:js:dev": "webpack --mode development --progress --color --watch",
    "build:js:prod": "webpack --mode development --progress --color",
    "build:css:dev": "stylus ./client/stylus/common.styl --out ./public/assets/styles/common.css --use autoprefixer-stylus --watch",
    "build:css:prod": "stylus ./client/stylus/common.styl --out ./public/assets/styles/common.css --use autoprefixer-stylus --compress",
    "build:html:prod": "pug ./client/templates --basedir ./client/templates/ --pretty --out ./public/",
    "generate:db": "touch ./server/db/index.json",
    "update:db": "node ./__tasks/generatorDB.js > ./server/db/index.json",
    "sync": "rsync -auvz --delete --ignore-times --checksum --exclude='.*' ./public/ ./htdocs/",
    "init:db": "run-s generate:db update:db",
    "preview": "run-s del mkdir build:*:prod",
    "release": "run-s del mkdir build:*:prod sync"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "lint-staged": {
    "client/scripts/**/*.js": [
      "yarn format:js",
      "yarn lint:js",
      "git add"
    ],
    "client/stylus/**/*.styl": [
      "yarn format:css",
      "yarn lint:css",
      "git add"
    ],
    "client/templates/**/*.pug": [
      "yarn lint:pug",
      "git add"
    ]
  },
  "author": "Yuki Kobayashi",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.18.0",
    "babel-polyfill": "^6.26.0",
    "humps": "^2.0.1",
    "immutable": "^4.0.0-rc.9",
    "lodash": "^4.17.5",
    "moment": "^2.22.0",
    "qs": "^6.5.1",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-loading": "^1.0.4",
    "recompose": "^0.26.0",
    "redux": "^3.7.2",
    "redux-form": "^7.3.0",
    "redux-logger": "^3.0.6",
    "redux-saga": "^0.16.0",
    "shallow-equal-object": "^1.1.1",
    "uuid": "^3.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.40",
    "@babel/plugin-proposal-object-rest-spread": "7.0.0-beta.40",
    "@babel/plugin-syntax-dynamic-import": "7.0.0-beta.40",
    "@babel/polyfill": "^7.0.0-beta.40",
    "@babel/preset-env": "^7.0.0-beta.40",
    "@babel/preset-flow": "^7.0.0-beta.40",
    "@babel/preset-react": "^7.0.0-beta.40",
    "@babel/register": "^7.0.0-beta.40",
    "autoprefixer-stylus": "^0.14.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^8.2.2",
    "babel-loader": "^8.0.0-beta.2",
    "babel-plugin-module-resolver": "^3.1.0",
    "body-parser": "^1.18.2",
    "boom": "^7.2.0",
    "cli-glob": "^0.1.0",
    "cpx": "^1.5.0",
    "eslint": "^4.18.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-react": "^7.7.0",
    "faker": "^4.1.0",
    "flow-bin": "^0.66.0",
    "glow": "^1.2.2",
    "husky": "^0.14.3",
    "json-merge": "^1.2.0",
    "json-server": "^0.12.1",
    "jsonwebtoken": "^8.2.0",
    "lint-staged": "^7.0.0",
    "mkdirp": "^0.5.1",
    "nodemon": "^1.17.2",
    "npm-run-all": "^4.1.2",
    "opn": "^5.2.0",
    "opn-cli": "^3.1.0",
    "prettier": "^1.11.0",
    "prettier-eslint": "^8.8.1",
    "prettier-eslint-cli": "^4.7.1",
    "pug": "^2.0.1",
    "pug-cli": "https://github.com/pugjs/pug-cli.git",
    "pug-lint": "^2.5.0",
    "pug-lint-config-clock": "^2.0.0",
    "react-hot-loader": "^4.0.0",
    "react-redux": "^5.0.7",
    "rimraf": "^2.6.2",
    "rsync": "^0.6.1",
    "stylint": "^1.5.9",
    "stylint-stylish": "^1.4.1",
    "stylus": "^0.54.5",
    "stylus-supremacy": "^2.9.1",
    "webpack": "^4.0.0",
    "webpack-cli": "^2.0.9"
  }
}
